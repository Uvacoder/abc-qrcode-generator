---
import Layout from "../layouts/Layout.astro";
import QRSVG from "../components/QRSVG.astro";
import QRForm from "../components/QRForm.astro";
import QRCode from "../components/QRCode.astro";
---

<Layout title="QR Code Generator">
  <main class="pb-12">
    <div
      class="flex flex-col-reverse mx-auto items-center justify-center p-10 md:max-w-4xl gap-y-12 md:flex-row md:gap-x-24"
    >
      <div class="w-full md:w-2/3">
        <h1 class="text-3xl font-700 mb-5 md:text-4xl">QR Code Generator</h1>
        <p class="mb-4">
          QR Codes allow smartphone users to access your website simply and
          quickly.
        </p>
        <p>
          Enter your URL below to generate a QR Code and download the image.
        </p>
        <QRForm />
      </div>
      <div class="w-full md:w-1/3">
        <QRSVG />
      </div>
    </div>
    <QRCode />
  </main>
</Layout>
